{
	"schemaVersion": "0.1.0",
	"name": "Pen Store",
	"behavior": "create",
	"noteContentFormat": "# {{schema:@Product:brand.name}} {{schema:@Product:name|trim}}\n\n{{image|image|list}}\n{{selectorHtml:.magic-thumb img?src|image|list}}\n\n{{selectorHtml:#Faktablad article|join:\"\\n\\n\"|markdown}}",
	"properties": [
		{
			"name": "url",
			"value": "{{url}}",
			"type": "text"
		},
		{
			"name": "title",
			"value": "{{schema:@Product:name|trim}}",
			"type": "text"
		},
		{
			"name": "price",
			"value": "{{schema:@Product:offers|template:\\\"${price} ${priceCurrency},\\\"|split:\\\",\\\"|unique|first}}",
			"type": "text"
		},
		{
			"name": "brand",
			"value": "{{schema:@Product:brand.name}}",
			"type": "text"
		},
		{
			"name": "tags",
			"value": "product",
			"type": "multitext"
		}
	],
	"triggers": [
		"https://penstore.no/"
	],
	"noteNameFormat": "{{schema:@Product:brand.name|safe_name}} {{schema:@Product:name|safe_name}}",
	"path": "3 Ressurser/Ã˜nskeliste/{{domain}}"
}